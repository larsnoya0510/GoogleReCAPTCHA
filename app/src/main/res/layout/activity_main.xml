<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/are_you_human_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Are you human?"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/saveFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="SaveFile"
        app:layout_constraintEnd_toEndOf="@+id/are_you_human_button"
        app:layout_constraintStart_toStartOf="@+id/are_you_human_button"
        app:layout_constraintTop_toBottomOf="@+id/are_you_human_button" />

    <Button
        android:id="@+id/readFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="ReadFile"
        app:layout_constraintEnd_toEndOf="@+id/saveFile"
        app:layout_constraintStart_toStartOf="@+id/saveFile"
        app:layout_constraintTop_toBottomOf="@+id/saveFile" />

    <Button
        android:id="@+id/openTestPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="openTestPage"
        app:layout_constraintEnd_toEndOf="@+id/readFile"
        app:layout_constraintStart_toStartOf="@+id/readFile"
        app:layout_constraintTop_toBottomOf="@+id/readFile" />

</androidx.constraintlayout.widget.ConstraintLayout>